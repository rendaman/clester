	 			$('.drawer').drawer();
			});
		//toggleClass()でクリック時のクラスの付け外しを指示
			$(function() {
				$('.drawer').click(function () {
					$('#toplogo').toggleClass('blur');
					$('.smart_bg').toggleClass('blur');
					$('#content').toggleClass('blur');
				});
			});
		</script>

